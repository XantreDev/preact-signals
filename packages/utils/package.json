{
  "name": "@preact-signals/utils",
  "version": "0.5.0",
  "private": false,
  "publishConfig": {
    "access": "public"
  },
  "description": "Utils for @preact/signals",
  "sideEffects": false,
  "repository": {
    "directory": "packages/utils",
    "url": "https://github.com/XantreGodlike/preact-signals",
    "type": "git"
  },
  "author": {
    "email": "valerik007.vs@gmail.com",
    "name": "Valerii Smirnov",
    "url": "https://github.com/XantreGodlike"
  },
  "type": "module",
  "module": "./dist/esm/index.js",
  "main": "./dist/cjs/index.js",
  "types": "./dist/esm/index.d.ts",
  "source": "./src/index.ts",
  "react-native": "./src/index.ts",
  "exports": {
    ".": {
      "types": "./dist/esm/index.d.ts",
      "import": "./dist/esm/index.js",
      "react-native": "./src/index.ts",
      "require": "./dist/cjs/index.js"
    },
    "./hooks": {
      "types": "./dist/esm/hooks/index.d.ts",
      "import": "./dist/esm/hooks/index.js",
      "react-native": "./src/hooks/index.ts",
      "require": "./dist/cjs/hooks/index.js"
    },
    "./components": {
      "react-native": "./src/components/index.ts",
      "types": "./dist/esm/components/index.d.ts",
      "import": "./dist/esm/components/index.js",
      "require": "./dist/cjs/components/index.js"
    },
    "./hocs": {
      "react-native": "./src/hocs/index.ts",
      "types": "./dist/esm/hocs/index.d.ts",
      "import": "./dist/esm/hocs/index.js",
      "require": "./dist/cjs/hocs/index.js"
    }
  },
  "scripts": {
    "clean": "rimraf dist",
    "build:esm": "tsc --outDir ./dist/esm",
    "build:cjs": "tsc --module commonjs --outDir ./dist/cjs",
    "test": "vitest",
    "lint": "tsc --noEmit",
    "watch": "concurrently \"pnpm build:esm -w\" \"pnpm build:cjs -w\"",
    "build": "pnpm clean && concurrently \"pnpm build:esm\" \"pnpm build:cjs\""
  },
  "typesVersions": {
    "*": {
      "hooks": [
        "./dist/esm/hooks/index.d.ts"
      ],
      "components": [
        "./dist/esm/components/index.d.ts"
      ],
      "hocs": [
        "./dist/esm/hocs/index.d.ts"
      ]
    }
  },
  "peerDependencies": {
    "@preact/signals-react": ">=1.2",
    "react": "17.*.* || 18.*.*"
  },
  "peerDependenciesMeta": {
    "react": {
      "optional": true
    }
  },
  "dependencies": {
    "@preact-signals/unified-signals": "workspace:*",
    "react-fast-hoc": "^0.1"
  },
  "devDependencies": {
    "@types/react": "^18",
    "@types/react-dom": "^18",
    "concurrently": "^8.2.0",
    "happy-dom": "^10.5.2",
    "hotscript": "^1.0.13",
    "radash": "^11.0.0",
    "react": "^18",
    "react-dom": "^18",
    "type-fest": "^3.13.0"
  },
  "keywords": [
    "preact signals",
    "signals",
    "utils"
  ],
  "license": "MIT"
}
