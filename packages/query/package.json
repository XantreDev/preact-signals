    "@testing-library/react": "^16.2.0",
    "@types/jsdom": "^21.1.5",
    "@types/react": "^18.2.37",
    "@types/react-dom": "^18.2.15",
    "@types/use-sync-external-store": "^0.0.3",
    "concurrently": "^8.2.2",
    "jsdom": "^24.0.0",
    "react": "18.2.0",
    "react-dom": "^18.2.0",
    "react-error-boundary": "^4.0.13",
    "webdriverio": "^8.22.1"
  },
  "dependencies": {
    "@preact-signals/unified-signals": "workspace:*",
