{
  "compilerOptions": {
    "rootDir": "./src",
    "noEmit": false,
    "outDir": "./dist/esm",
    "paths": {
      "@preact-signals/utils/*": ["./packages/utils/src/*"]
    },
    "types": ["vitest/importMeta", "vitest/globals"],
    "allowJs": false,
    "isolatedDeclarations": true,
    "tsBuildInfoFile": "./dist/.tsbuildinfo",
    "noUnusedLocals": true
  },
  "extends": ["../../tsconfig.nodenext.json"],
  "exclude": ["**/node_modules", "./dist/**/*", "./*.ts"],
  "references": [
    {
      "path": "../utils"
    },
    {
      "path": "../unified-signals"
    }
  ]
}
