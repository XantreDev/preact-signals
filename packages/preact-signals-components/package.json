{
  "name": "@preact-signals/components",
  "version": "0.1.1",
  "private": false,
  "publishConfig": {
    "access": "public"
  },
  "description": "A collection of components for Preact that integrate seamlessly with Preact Signals, enabling reactive programming patterns. The package provides 'Show', 'Switch', and 'Match' components, offering a declarative way to manage conditional rendering based on reactive signals.",
  "sideEffects": false,
  "repository": {
    "url": "https://github.com/XantreGodlike/preact-signals/tree/main/packages/preact-signals-components",
    "type": "git"
  },
  "author": {
    "email": "valerik007.vs@gmail.com",
    "name": "Valerii Smirnov",
    "url": "https://github.com/XantreGodlike"
  },
  "type": "module",
  "module": "./dist/esm/index.js",
  "main": "./dist/cjs/index.js",
  "types": "./dist/esm/index.d.ts",
  "source": "./src/index.ts",
  "react-native": "./src/index.ts",
  "exports": {
    ".": {
      "types": "./dist/esm/index.d.ts",
      "import": "./dist/esm/index.js",
      "main": "./dist/cjs/index.js"
    }
  },
  "scripts": {
    "clean": "rimraf dist",
    "build:esm": "tsc --outDir ./dist/esm",
    "build:cjs": "tsc --module commonjs --outDir ./dist/cjs",
    "lint": "tsc --noEmit",
    "test": "vitest",
    "watch": "concurrently \"pnpm build:esm -w\" \"pnpm build:cjs -w\"",
    "build": "pnpm clean && concurrently \"pnpm build:esm\" \"pnpm build:cjs\""
  },
  "peerDependencies": {
    "@preact/signals-core": ">=1.2.0",
    "react": "17.*.* || 18.*.*"
  },
  "peerDependenciesMeta": {
    "@preact/signals-core": {
      "optional": true
    },
    "react": {
      "optional": true
    }
  },
  "dependencies": {
    "@preact-signals/hooks": "workspace:*",
    "@preact-signals/utils": "workspace:*"
  },
  "devDependencies": {
    "@preact/signals-core": ">=1.2.0",
    "@preact/signals-react": ">=1.2.0",
    "@types/react": "^18",
    "@types/react-dom": "^18",
    "concurrently": "^8.2.0",
    "happy-dom": "^10.5.1",
    "react-dom": "^18.2.0",
    "type-fest": "^3.12.0"
  },
  "keywords": [
    "preact",
    "react",
    "solid",
    "components",
    "preact signals",
    "reactivity",
    "reactive programming",
    "frontend",
    "show",
    "match",
    "switch"
  ],
  "license": "MIT"
}
