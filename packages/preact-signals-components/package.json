{
  "name": "@preact-signals/components",
  "version": "0.0.1",
  "private": false,
  "publishConfig": {"access": "public"},
  "description": "Component for more readable usage of preact signals",
  "sideEffects": false,
  "repository": {
    "url": "https://github.com/XantreGodlike/preact-signals-utils",
    "type": "git"
  },
  "author": {
    "email": "valerik007.vs@gmail.com",
    "name": "Valerii Smirnov",
    "url": "https://github.com/XantreGodlike"
  },
  "type": "module",
  "module": "./dist/esm/index.js",
  "main": "./dist/cjs/index.js",
  "types": "./dist/esm/index.d.ts",
  "source": "./src/index.ts",
  "react-native": "./src/index.ts",
  "exports": {
    ".": {
      "types": "./dist/esm/index.d.ts",
      "import": "./dist/esm/index.js",
      "main": "./dist/cjs/index.js"
    }
  },
  "scripts": {
    "clean": "rimraf dist",
    "build:esm": "tsc --outDir ./dist/esm",
    "build:cjs": "tsc --module commonjs --outDir ./dist/cjs",
    "watch": "pnpm build:esm -- -w & pnpm build:cjs -- -w",
    "build": "pnpm clean && pnpm build:esm && pnpm build:cjs",
    "prepare": "ts-patch install -s"
  },
  "dependencies": {},
  "peerDependencies": {
    "@preact/signals-react": ">=1.2.0",
    "react": "17.*.* || 18.*.*"
  },
  "peerDependenciesMeta": {
    "@preact/signals-react": {
      "optional": true
    },
    "react": {
      "optional": true
    }
  },
  "devDependencies": {
    "@types/react": "^18",
    "@types/react-dom": "^18",
    "type-fest": "^3.12.0",
    "rimraf": "^4.1.2",
    "ts-patch": "^2.1.0",
    "typescript": "^5.0.2",
    "typescript-transform-paths": "^3.4.6"
  },
  "keywords": [],
  "author": "XanterGodlike",
  "license": "MIT"
}
