{
  "name": "@preact-signals/unified-signals",
  "version": "0.2.2",
  "private": false,
  "publishConfig": {
    "access": "public"
  },
  "description": "Signals package that can used in any environment, via import remapping",
  "sideEffects": false,
  "repository": {
    "directory": "packages/unified-signals",
    "url": "https://github.com/XantreGodlike/preact-signals",
    "type": "git"
  },
  "homepage": "https://github.com/XantreGodlike/preact-signals/blob/main/packages/unified-signals/README.md",
  "author": {
    "email": "valerik007.vs@gmail.com",
    "name": "Valerii Smirnov",
    "url": "https://github.com/XantreGodlike"
  },
  "type": "module",
  "module": "./dist/esm/index.mjs",
  "main": "./dist/cjs/index.cjs",
  "types": "./src/index.d.ts",
  "source": "./src/index.ts",
  "react-native": "./src/index.ts",
  "exports": {
    ".": {
      "types": "./src/index.d.ts",
      "import": "./dist/esm/index.mjs",
      "require": "./dist/cjs/index.cjs",
      "react-native": "./src/index.ts"
    },
    "./package.json": "./package.json"
  },
  "scripts": {
    "clean": "rimraf dist",
    "test": "vitest",
    "lint": "tsc --noEmit && check-export-map",
    "build:rollup": "rollup -c",
    "watch": "pnpm build:rollup -w",
    "build": "pnpm clean && pnpm build:rollup"
  },
  "peerDependencies": {
    "@preact/signals": ">=1.1.0",
    "@preact/signals-core": ">=1.1.0",
    "@preact/signals-react": ">=1.2.0",
    "@preact-signals/safe-react": "*"
  },
  "peerDependenciesMeta": {
    "@preact/signals-react": {
      "optional": true
    },
    "@preact/signals": {
      "optional": true
    },
    "@preact/signals-core": {
      "optional": true
    },
    "@preact-signals/safe-react": {
      "optional": true
    }
  },
  "devDependencies": {
    "@preact/signals-react": "1.3.4",
    "concurrently": "^8.2.2",
    "happy-dom": "^10.11.2",
    "check-export-map": "^1.3.0",
    "rollup": "^3.29.4",
    "rollup-plugin-esbuild": "^5.0.0",
    "rollup-plugin-node-externals": "^6.1.2",
    "@rollup/plugin-replace": "^5.0.5",
    "@rollup/plugin-typescript": "^11.1.5"
  },
  "keywords": [],
  "license": "MIT"
}
