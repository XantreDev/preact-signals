{
  "compilerOptions": {
    "target": "ESNext",
    "useDefineForClassFields": true,
    "lib": ["DOM", "DOM.Iterable", "ESNext"],
    "allowJs": false,
    "skipLibCheck": true,
    "esModuleInterop": false,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "noUncheckedIndexedAccess": true,
    "forceConsistentCasingInFileNames": true,
    "module": "ESNext",
    "moduleResolution": "Node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",
    "rootDir": "./",
    "baseUrl": "./",
    "paths": {
      "@one-render/core": ["./packages/core/index.ts"],
      "@one-render/components": ["./packages/components/index.ts"],
      "@one-render/utils": ["./packages/utils/index.ts"],
      "@one-render/globals": ["./packages/globals/index.ts"],
      "@one-render/monkeypatch": ["./packages/monkeypatch/index.ts"]
    }
  },
  "exclude": ["**/node_modules"],
  "references": [{ "path": "./tsconfig.node.json" }]
}
